<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SnapBoxApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">       
            <Button
                x:Name="UploadBtn"
                Text="Lisää..." 
               Clicked="OnUploadClicked"
                HorizontalOptions="Fill" />
             <Button
                x:Name="SettingsBtn"
                Text="Settings" 
                Clicked="OnSettingsClicked"
                HorizontalOptions="Fill" />
             <Button
                x:Name="SearchBtn"
                Text="Haku" 
                Clicked="OnSearchClicked"
                HorizontalOptions="Fill" />
             <Button
                x:Name="PrintBtn"
                Text="Tulosteet" 
                Clicked="OnPrintClicked"
                HorizontalOptions="Fill" />
             <Button
                x:Name="BoxViewBtn"
                Text="Laatikot" 
                Clicked="OnBoxViewClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
