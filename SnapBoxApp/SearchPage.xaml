<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SnapBoxApp.SearchPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:SnapBoxApp.Converters"
             xmlns:local="clr-namespace:SnapBoxApp"
             Title="Haku">
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Search Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" ColumnSpacing="10" Margin="0,0,0,20">
            <Entry x:Name="SearchEntry" 
                   Grid.Column="0"
                   Placeholder="Syötä hakutermi..."
                   Text="{Binding SearchQuery}"
                   ReturnCommand="{Binding SearchCommand}"
                   ReturnCommandParameter="{Binding SearchQuery}"/>
            <Button x:Name="SearchButton" 
                    Grid.Column="1"
                    Text="Hae"
                    Command="{Binding SearchCommand}"
                    CommandParameter="{Binding SearchQuery}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    Padding="20,10"/>
        </Grid>

        <!-- Search Results View -->
        <local:SearchResultsView Grid.Row="1"
                          SearchResults="{Binding SearchResults}"
                          HasResults="{Binding HasResults}"
                          NoResults="{Binding NoResults}"
                          IsLoading="{Binding IsLoading}"/>
    </Grid>
</ContentPage>
