<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SnapBoxApp.UploadPage"
             Title="UploadPage">
    <VerticalStackLayout>
        <Label
            Text="Laatikko"/>

        <Entry x:Name="BoxName"/>
        
        <toolkit:CameraView x:Name="camera"
                            HeightRequest="300"
                            WidthRequest="300"/>
        <Button
            x:Name="CaptureBtn"
            Text="Take photo"
            Clicked="OnCaptureClicked"
            HorizontalOptions="Fill"/>

        <!-- Title -->
        <Label Text="Title"/>
        <Entry x:Name="TitleEntry" IsReadOnly="True" Text="{Binding Title}"/>

        <!-- Category -->
        <Label Text="Category"/>
        <Entry x:Name="CategoryEntry" IsReadOnly="True" Text="{Binding Category}"/>

        <!-- Detailed Description -->
        <Label Text="Detailed Description"/>
        <Editor x:Name="DetailedDescriptionEditor" IsReadOnly="True" Text="{Binding DetailedDescription}" AutoSize="TextChanges" HeightRequest="80"/>

        <!-- Accept/Reject buttons side by side -->
        <HorizontalStackLayout>
            <Button x:Name="AcceptBtn" Text="Hyväksy"/>
            <Button x:Name="RejectBtn" Text="Hylkää"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>