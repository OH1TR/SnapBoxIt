<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SnapBoxApp.BoxViewPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SnapBoxApp"
             Title="Laatikot"
             x:Name="Page">
    <Grid RowDefinitions="Auto,*" Padding="10">
        <!-- Box Selection Dropdown -->
        <StackLayout Grid.Row="0" Spacing="10">
            <Label Text="Valitse laatikko:" 
                   FontSize="16" 
                   FontAttributes="Bold"/>
            <Picker x:Name="BoxPicker"
                    Title="Valitse laatikko"
                    ItemsSource="{Binding Boxes}"
                    SelectedItem="{Binding SelectedBox}"
                    ItemDisplayBinding="{Binding .}"
                    IsEnabled="{Binding IsNotLoading}"/>
        </StackLayout>

        <!-- Search Results View -->
        <local:SearchResultsView Grid.Row="1" 
                                 SearchResults="{Binding SearchResults}"
                                 HasResults="{Binding HasResults}"
                                 NoResults="{Binding NoResults}"
                                 IsLoading="{Binding IsLoading}"/>
    </Grid>
</ContentPage>
